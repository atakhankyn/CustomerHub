@model CustomerDetailsViewModel

@{
    ViewData["Title"] = "Müşteri Detayı";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>
        @Model.Name
        <span class="badge @Model.StatusBadgeClass">@Model.StatusText</span>
    </h1>
</div>

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-8">
                <dl>
                    <dt>Müşteri Tipi</dt>
                    <dd>@Model.TypeText</dd>

                    <dt>TCKN / VKN</dt>
                    <dd>@Model.TCKNOrVKN</dd>

                    <dt>Email</dt>
                    <dd>@(Model.Email ?? "-")</dd>

                    <dt>Telefon</dt>
                    <dd>@(Model.Phone ?? "-")</dd>
                    
                    <dt>Şehir</dt>
                    <dd>@(Model.AddressCity ?? "-")</dd>

                    <dt>Adres</dt>
                    <dd>@(Model.AddressLine ?? "-")</dd>
                </dl>
            </div>
            <div class="col-md-4">
                <dl>
                    <dt>Oluşturulma Tarihi</dt>
                    <dd>@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</dd>

                    <dt>Son Güncelleme</dt>
                    <dd>@Model.UpdatedAt.ToString("dd.MM.yyyy HH:mm")</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    @if (Model.CanBeEdited)
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            Düzenle
        </a>
    }
    <a asp-action="Index" class="btn btn-secondary">
        Listeye Dön
    </a>
</div>