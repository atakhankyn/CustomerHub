@model List<CustomerListViewModel>

@{
    ViewData["Title"] = "Müşteri Listesi";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Müşteri Listesi</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Yeni Müşteri
    </a>
</div>

@if (Model.Count == 0)
{
    <div class="alert alert-info">
        <strong>Bilgi:</strong> Henüz kayıtlı müşteri bulunmamaktadır.
        <a asp-action="Create" class="alert-link">Yeni müşteri ekleyin.</a>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Ad</th>
                    <th>Tip</th>
                    <th>Durum</th>
                    <th>TCKN/VKN</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>@customer.Name</td>
                        <td>@customer.TypeText</td>
                        <td>
                            <span class="badge @customer.StatusBadgeClass">
                                @customer.StatusText
                            </span>
                        </td>
                        <td>@customer.TCKNOrVKN</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@customer.Id" 
                               class="btn btn-sm btn-info">
                                Detay
                            </a>
                            <a asp-action="Edit" asp-route-id="@customer.Id" 
                               class="btn btn-sm btn-warning">
                                Düzenle
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
    <p class="text-muted">
        Toplam <strong>@Model.Count</strong> müşteri listeleniyor.
    </p>
}